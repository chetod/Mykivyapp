<MathGame>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    Label:
        text: 'Math Game'
        font_size: '24sp'
        color: (1, 1, 1, 1)
    
    Label:
        id: question_label
        text: root.question
        font_size: '18sp'
    
    TextInput:
        id: answer_input
        multiline: False
        hint_text: 'Enter your answer'
        size_hint: (0.8, 0.1)
        on_text_validate: root.check_answer(self.text)