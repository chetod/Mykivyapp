<MathGame>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

    # หัวข้อเกม
    Label:
        text: 'Math Game'
        font_size: '32sp'
        size_hint_y: None
        height: '60dp'
        bold: True
        color: 0.9, 0.9, 0.9, 1  # Light text
    # แสดงคำถาม
    # Question display
    Label:
        text: root.question
        font_size: '24sp'
        size_hint_y: None
        height: '100dp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        color: 0.9, 0.9, 0.9, 1
    # Score and Timer
    BoxLayout:
        size_hint_y: None
        height: '40dp'
        spacing: 20
        padding: [20, 0]

        Label:
            text: 'Time: ' + str(root.timer)
            color: 1, 0.8, 0.2, 1  # Golden yellow
            bold: True
            font_size: '20sp'
    # ฟิลด์กรอกคำตอบ
    # Answer input
    BoxLayout:
        size_hint_y: None
        height: '50dp'
        padding: [40, 0]
        
        TextInput:
            id: answer_input
            multiline: False
            font_size: '24sp'
            hint_text: 'Enter your answer'
            on_text_validate: root.check_answer(self.text)
            background_color: 0.2, 0.2, 0.2, 1
            foreground_color: 0.9, 0.9, 0.9, 1
            padding: [10, 10]
            cursor_color: 0.9, 0.9, 0.9, 1

    # ปุ่มสำหรับควบคุม
    BoxLayout:
        size_hint: (1, 0.2)
        spacing: 10

        Button:
            text: 'Start Game'
            size_hint: (0.4, 0.1)
            on_press: root.start_game()

        Button:
            text: 'Settings'
            size_hint: (0.4, 0.1)
            on_press: root.show_settings()
    # Status message
    Label:
        id: status_label
        size_hint_y: None
        height: '40dp'
        font_size: '18sp'
    # ปุ่ม Reset
    
    BoxLayout:
        size_hint: (1, 0.2)
        spacing: 10

        Button:
            text: 'Reset'
            size_hint: (0.4, 0.1)
            on_press: root.reset_game()

        Button:
            text: 'Exit'
            size_hint: (0.4, 0.1)
            on_press: app.stop()
