<MathGame>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

    # หัวข้อเกม
    Label:
        text: 'Math Game'
        font_size: '32sp'
        size_hint_y: None
        height: '60dp'
        bold: True
        color: 0.9, 0.9, 0.9, 1  # Light text
    # แสดงคำถาม
    Label:
        id: question_label
        text: root.question
        font_size: '18sp'

    # ฟิลด์กรอกคำตอบ
    TextInput:
        id: answer_input
        multiline: False
        hint_text: 'Enter your answer'
        size_hint: (0.8, 0.1)
        on_text_validate: root.check_answer(self.text)

    # ปุ่มสำหรับควบคุม
    BoxLayout:
        size_hint: (1, 0.2)
        spacing: 10

        Button:
            text: 'Start Game'
            size_hint: (0.4, 0.1)
            on_press: root.start_game()

        Button:
            text: 'Settings'
            size_hint: (0.4, 0.1)
            on_press: root.show_settings()
    
    # ปุ่ม Reset
    BoxLayout:
        size_hint: (1, 0.2)
        spacing: 10

        Button:
            text: 'Reset'
            size_hint: (0.4, 0.1)
            on_press: root.reset_game()

        Button:
            text: 'Exit'
            size_hint: (0.4, 0.1)
            on_press: app.stop()
